<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_movie_bg"
    tools:context=".jp.co.tegaraashi.Appcooking464.SplashActivity" >

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" >
    </VideoView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/splash_welcome"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="250dp"
            android:text="ようこそ！"
            android:textColor="@color/white_alpha"
            android:textSize="35sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_alpha"
            android:orientation="vertical"
            android:paddingBottom="17dp"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="28dp" >

            <Button
                android:id="@+id/splash_btn_start"
                style="@style/splash_btn_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="@string/splash_btn_start" />

            <Button
                android:id="@+id/splash_btn_regist"
                style="@style/splash_btn_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/splash_btn_regist" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/splash_login"
                    android:visibility="gone" />

<!--  -->
                <Button
                    android:id="@+id/splash_btn_login"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:background="@null" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>