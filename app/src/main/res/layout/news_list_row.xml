<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="20dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/news_icon_width"
            android:layout_height="@dimen/news_icon_height"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/news_list_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:lines="1"
                android:singleLine="true"
                android:text="Title"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/news_list_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Time"
                android:textColor="@color/news_date"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/news_list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/margin_10dp"
        android:autoLink="all"
        android:gravity="left"
        android:singleLine="false"
        android:text="Text"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/news_image_view"
            android:layout_width="@dimen/news_img_width"
            android:layout_height="@dimen/news_img_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <WebView
            android:id="@+id/news_web_view"
            android:layout_width="@dimen/news_img_width"
            android:layout_height="@dimen/news_img_height"
            android:layout_gravity="center" />

        <VideoView
            android:id="@+id/news_video_view"
            android:layout_width="@dimen/news_img_width"
            android:layout_height="@dimen/news_img_height"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="1dp" >

        <TextView
            android:id="@+id/iine_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="いいね！　件"
            android:textColor="@color/main_view_bg_default"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/news_bg_buttom"
            android:padding="@dimen/margin_10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/feed_btn_iine" />

                <Button
                    android:id="@+id/iineTextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="いいね！"
                    android:textColor="@color/iine_gray"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/news_iine_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/feed_btn_iine"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/news_iine_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:src="@drawable/feed_btn_iine"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/feed_btn_iine"
                android:visibility="gone" />

            <Button
                android:id="@+id/news_iine_text_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="いいね！"
                android:textColor="@color/splash_movie_bg"
                android:textSize="9sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/news_iine_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="いいね！"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/feed_btn_comment"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="コメント"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="シェア"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>